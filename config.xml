<?xml version='1.0' encoding='utf-8'?>
<widget id="com.radio.readabilty" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ability to read</name>
    <description>
        A Readability mobile-app for android.
    </description>
    <author email="gopeyx@gmail.com" href="http://codecafe.in.ua">
        Radio
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />

        <splash src="res/android/xhdpi.png" density="port-mdpi"/>
        <splash src="res/android/xxhdpi.png" density="port-hdpi"/>
        <splash src="res/android/xxxhdpi.png" density="port-xhdpi"/>
    </platform>
</widget>
